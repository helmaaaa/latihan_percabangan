import java.util.Scanner;

public class BankATM {

    public static void main(String[] args) {

        Scanner masukan = new Scanner(System.in);

        int jumlahUang, saldo, pilihan;
        saldo = 100000;

        System.out.println("Selamat Datang di Bank Unan");
        System.out.println("Menu ATM :\n1. Cek Saldo   2. Simpan Uang   3. Ambil Uang ");
        System.out.print("Pilih Menu :");
        pilihan = masukan.nextInt();

        if (pilihan == 1) {
            System.out.println("saldo saat ini : Rp. " + saldo);
        } else if (pilihan == 2) {
            System.out.print("Uang Masuk : Rp. ");
            jumlahUang = masukan.nextInt();
            saldo += jumlahUang;

            System.out.println("Saldo saat ini : Rp. " + saldo);
        } else if (pilihan == 3) {
            System.out.print("Ambil Uang : Rp. ");
            jumlahUang = masukan.nextInt();
            if (jumlahUang <= saldo) {
                saldo -= jumlahUang;
            } else {
                System.out.println("Saldo Anda Tidak Cukup");
            }

            System.out.println("Saldo saat ini : Rp. " + saldo);
        } else {
            System.out.println("Pilihan yang Anda masukkan tidak ada");
        }
    }
}
